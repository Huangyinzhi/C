#include<stdio.h>
int main(){
        char character[5];
        int i;
        printf(" please enter English character: ");
        for(i=0;i<5;i++){
                scanf("%c",&character[i]);
        }
        for(i=0;i<5;i++){
                switch(character[i]){
                case 'E':
                        printf ("******\n");
                        printf ("*\n");
                        printf("******\n");
                        printf("*\n");
                        printf("*\n");
                        printf("******\n");
                        break;
                case 'F':
                        printf ("******\n");
                        printf ("*\n");
                        printf("******\n");
                        printf("*\n");
                        printf("*\n");
                        printf("*\n");
                        break;
                case 'M':
                        printf ("**********\n");
                        printf ("*   *    *\n");
                        printf ("*   *    *\n");
                        printf ("*   *    *\n");
                        printf ("*   *    *\n");
                        printf ("*   *    *\n");
                       break;

                default :
                        printf("\n");
               }
         }
       return 0;
}
